local paths = {
  "./game/scripts/vscripts/?.lua",
  "./game/scripts/vscripts/?/init.lua",
  "./spec/?.lua",
  "./spec/?/init.lua",
}

local lpath = ""

for _, path in ipairs(paths) do
  lpath = lpath .. path .. ";"
end

return {
  default = {
    ROOT = { "./spec" },
    recursive = true,
  },
  _all = {
    verbose = true,
    coverage = true,
    helper = "./spec/helper.lua",
    lpath = lpath,
  },
}
