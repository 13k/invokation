root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
tab_width = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.{css,js,xml}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2

[{.luacheckrc,config.ld}]
indent_style = space
indent_size = 2

[*.{txt,gamevents,vmat,vsndevts}]
indent_style = space
indent_size = 2
