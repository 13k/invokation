{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "env": {
          "DOTA_PATH": "${config:dota2.path}"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Install",
      "type": "shell",
      "command": "make install",
      "options": {
        "env": {
          "DOTA_PATH": "${config:dota2.path}"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "make build",
      "options": {
        "env": {
          "DOTA_PATH": "${config:dota2.path}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Build (Force)",
      "type": "shell",
      "command": "make build",
      "options": {
        "env": {
          "DOTA_PATH": "${config:dota2.path}",
          "FORCE_BUILD": "1"
        }
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Launch Game",
      "type": "process",
      "command": "${config:dota2.path}\\game\\bin\\win64\\dota2.exe",
      "args": ["+dota_launch_custom_game", "invokation", "invokation"],
      "isBackground": true,
      "options": {
        "cwd": "${config:dota2.path}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Launch Tools",
      "type": "process",
      "command": "${config:dota2.path}\\game\\bin\\win64\\dota2cfg.exe",
      "args": ["-addon", "invokation"],
      "isBackground": true,
      "options": {
        "cwd": "${config:dota2.path}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
