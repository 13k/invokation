{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "files": {
    "include": ["**/*.json", "**/*.mts", "**/*.ts"],
    "ignore": ["content/panorama/scripts/**/*", "node_modules/**/*"]
  }
}
