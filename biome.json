{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "include": ["**/*.json", "**/*.js", "**/*.mjs", "**/*.mts", "**/*.ts"],
    "ignore": ["src/content/panorama/scripts/lib/vendor/**/*"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noNewSymbol": "error"
      },
      "style": {
        "noParameterProperties": "error",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useNamingConvention": "warn",
        "useShorthandArrayType": "error",
        "useShorthandAssign": "error",
        "useSingleCaseStatement": "error"
      },
      "suspicious": {
        "noMisrefactoredShorthandAssign": "warn"
      },
      "nursery": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  }
}
