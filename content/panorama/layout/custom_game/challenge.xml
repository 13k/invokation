<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/challenge.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/challenge.css" />
  </styles>

  <Panel class="Root HudVisible" hittest="false" always-cache-composition-layer="true" require-composition-layer="true">
    <Panel class="Combo" hittest="false">
      <Panel id="Sequence" hittest="false" />
    </Panel>

    <Panel id="Splash" hittest="false" hittestchildren="false">
      <Panel class="Box">
        <Label id="SplashTitle" text="#invokation_combo_splash_start_title__1" class="Title" />
        <Label id="SplashHelp" text="#invokation_combo_splash_start_help__1" class="Help" />
      </Panel>
    </Panel>

    <Panel class="Controls TranslucentPanel" hittest="false">
      <Panel class="ControlIcon">
        <Button class="InfoIcon IconButton Grey" onactivate="challenge.ShowDetails()" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_details)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="EyeIcon IconButton Grey" onactivate="challenge.ToggleHUD()" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_hud)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="RefreshButton IconButton Blue" onactivate="challenge.Restart()" onmouseover="UIShowTextTooltip(#invokation_combo_restart)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="FullRefreshIcon IconButton Bronze" onactivate="challenge.Restart(true)" onmouseover="UIShowTextTooltip(#invokation_combo_full_restart)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="CloseButton IconButton Red" onactivate="challenge.Stop()" onmouseover="UIShowTextTooltip(#invokation_combo_stop)" onmouseout="UIHideTextTooltip()" />
      </Panel>
    </Panel>

    <Panel id="Score" />
  </Panel>
</root>
