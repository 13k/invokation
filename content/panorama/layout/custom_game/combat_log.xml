<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/combat_log.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/combat_log.css" />
  </styles>

  <snippets>
    <snippet name="CombatLogRow">
      <Panel class="CombatLogRow" />
    </snippet>

    <snippet name="CombatLogAbility">
      <Button class="CombatLogAbility">
        <DOTAAbilityImage id="Image" />
      </Button>
    </snippet>

    <snippet name="CombatLogItem">
      <Button class="CombatLogAbility">
        <DOTAItemImage id="Image" />
      </Button>
    </snippet>
  </snippets>

  <Panel class="Root" hittest="false">
    <Panel id="CombatLog" class="TransparentPanel Closed">
      <Panel id="CombatLogContents" />

      <Panel class="CombatLogBar">
        <ToggleButton class="CombatLogThumb ExpandCollapseToggleButton" onactivate="combatLog.Toggle()">
          <Label class="CombatLogTitle" text="#invokation_combat_log_title" hittest="false" />
        </ToggleButton>

        <Panel class="CombatLogBarActions">
          <ToggleButton id="FilterInvocations" class="BarItem Checkbox" text="#invokation_combat_log_filter_invocations" />

          <Button class="BarItem ClearButton BlueButton" onactivate="combatLog.Clear()">
            <Label text="#invokation_combat_log_clear" hittest="false" />
          </Button>
        </Panel>
      </Panel>
    </Panel>
  </Panel>
</root>
