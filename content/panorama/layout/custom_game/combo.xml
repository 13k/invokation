<root>
  <scripts>
    <include src="s2r://panorama/scripts/sequence_actions.vjs" />

    <include src="file://{resources}/scripts/custom_game/combo.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/combo.css" />
  </styles>

  <Panel class="Root" hittest="false" always-cache-composition-layer="true" require-composition-layer="true">
    <Panel class="Combo" hittest="false">
      <Panel id="Sequence" hittest="false" />
    </Panel>

    <Panel id="Splash" hittest="false" hittestchildren="false">
      <Panel class="Box">
        <Label text="#invokation_combo_splash" class="Title" />
        <Label text="#invokation_combo_splash_disclaimer" class="Disclaimer" />
      </Panel>
    </Panel>

    <Panel class="Controls TranslucentPanel" hittest="false">
      <Panel class="ControlIcon">
        <Button class="InfoIcon IconButton Grey" onactivate="combo.ShowDetails()" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_details)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="RefreshButton IconButton Blue" onactivate="combo.Restart()" onmouseover="UIShowTextTooltip(#invokation_combo_restart)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="FullRefreshIcon IconButton Bronze" onactivate="combo.Restart(true)" onmouseover="UIShowTextTooltip(#invokation_combo_full_restart)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="ControlIcon">
        <Button class="CloseButton IconButton Red" onactivate="combo.Stop()" onmouseover="UIShowTextTooltip(#invokation_combo_stop)" onmouseout="UIHideTextTooltip()" />
      </Panel>
    </Panel>

    <!-- Score (shamelessly rippped from ES arcana) -->

    <Panel id="Score" class="Level2" hittest="false" hittestchildren="false">
      <Panel class="Counter">
        <Panel class="SplashBackground">
          <DOTAScenePanel id="CounterFX" camera="camera" renderdeferred="false" rendershadows="false" particleonly="true" map="scenes/hud/ui_es_arcana_combo_ambient" />
        </Panel>

        <Panel class="Content">
          <Panel id="CounterTicker" class="DigitContainer">
            <Panel class="ESDigitX" />
            <Panel id="CounterTickerDigit0" class="ESDigit" />
            <Panel id="CounterTickerDigit1" class="ESDigit" />
            <Panel id="CounterTickerDigit2" class="ESDigit" />
          </Panel>
          <Label class="Label" text="#invokation_combo_counter_title" />
        </Panel>
      </Panel>

      <Panel class="Summary">
        <DOTAScenePanel id="SummaryFX" camera="camera" renderdeferred="false" rendershadows="false" particleonly="true" map="scenes/hud/ui_es_arcana_combo_summary" />
        <Panel class="SplashBackground" />

        <Panel class="Content">
          <Panel class="Count">
            <Panel id="SummaryCountDisplay" class="DigitContainer">
              <Panel class="ESDigitX" />
              <Panel id="SummaryCountDisplayDigit0" class="ESDigit" />
              <Panel id="SummaryCountDisplayDigit1" class="ESDigit" />
              <Panel id="SummaryCountDisplayDigit2" class="ESDigit" />
            </Panel>
            <Label class="Label" text="#invokation_combo_counter_title" />
          </Panel>

          <Panel class="Damage">
            <Panel id="SummaryDamageTicker" class="DigitContainer">
              <Panel id="SummaryDamageTickerDigit0" class="ESDigit" />
              <Panel id="SummaryDamageTickerDigit1" class="ESDigit" />
              <Panel id="SummaryDamageTickerDigit2" class="ESDigit" />
              <Panel id="SummaryDamageTickerDigit3" class="ESDigit" />
              <Panel id="SummaryDamageTickerDigit4" class="ESDigit" />
            </Panel>
            <Label class="Label" text="#invokation_combo_counter_damage_label" />
          </Panel>
        </Panel>
      </Panel>
    </Panel>
  </Panel>
</root>
