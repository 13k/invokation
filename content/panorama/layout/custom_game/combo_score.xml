<!-- Combo Score (shamelessly rippped from ES arcana) -->
<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/combo_score.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/combo_score.css" />
  </styles>

  <Panel class="ComboScoreRoot" hittest="false" hittestchildren="false">
    <Panel class="ComboScoreCounter">
      <Panel class="ComboScoreSplashBackground">
        <DOTAScenePanel id="ComboScoreCounterFX" camera="camera" renderdeferred="false" rendershadows="false" particleonly="true" map="scenes/hud/ui_es_arcana_combo_ambient" require-composition-layer="true" />
      </Panel>

      <Panel class="ComboScoreContent">
        <Panel id="ComboScoreCounterTicker" class="ComboScoreDigitContainer">
          <Panel class="ComboScoreDigitX" />
          <Panel id="ComboScoreCounterTickerDigit0" class="ComboScoreDigit" />
          <Panel id="ComboScoreCounterTickerDigit1" class="ComboScoreDigit" />
          <Panel id="ComboScoreCounterTickerDigit2" class="ComboScoreDigit" />
        </Panel>
        <Label class="ComboScoreLabel" text="#invokation_combo_counter_title" />
      </Panel>
    </Panel>

    <Panel class="ComboScoreSummary">
      <DOTAScenePanel id="ComboScoreSummaryFX" camera="camera" renderdeferred="false" rendershadows="false" particleonly="true" map="scenes/hud/ui_es_arcana_combo_summary" require-composition-layer="true" />
      <Panel class="ComboScoreSplashBackground" />

      <Panel class="ComboScoreContent">
        <Panel class="ComboScoreCount">
          <Panel id="ComboScoreSummaryCountDisplay" class="ComboScoreDigitContainer">
            <Panel class="ComboScoreDigitX" />
            <Panel id="ComboScoreSummaryCountDisplayDigit0" class="ComboScoreDigit" />
            <Panel id="ComboScoreSummaryCountDisplayDigit1" class="ComboScoreDigit" />
            <Panel id="ComboScoreSummaryCountDisplayDigit2" class="ComboScoreDigit" />
          </Panel>
          <Label class="ComboScoreLabel" text="#invokation_combo_counter_title" />
        </Panel>

        <Panel class="ComboScoreDamage">
          <Panel id="ComboScoreSummaryDamageTicker" class="ComboScoreDigitContainer">
            <Panel id="ComboScoreSummaryDamageTickerDigit0" class="ComboScoreDigit" />
            <Panel id="ComboScoreSummaryDamageTickerDigit1" class="ComboScoreDigit" />
            <Panel id="ComboScoreSummaryDamageTickerDigit2" class="ComboScoreDigit" />
            <Panel id="ComboScoreSummaryDamageTickerDigit3" class="ComboScoreDigit" />
            <Panel id="ComboScoreSummaryDamageTickerDigit4" class="ComboScoreDigit" />
          </Panel>
          <Label class="ComboScoreLabel" text="#invokation_combo_counter_damage_label" />
        </Panel>
      </Panel>
    </Panel>
  </Panel>
</root>
