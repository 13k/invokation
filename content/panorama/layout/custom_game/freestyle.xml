<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/freestyle.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/freestyle.css" />
  </styles>

  <Panel class="FreestyleRoot Hide" hittest="false">
    <Panel class="FreestyleControls TranslucentPanel" hittest="false">
      <Panel class="FreestyleControlIcon">
        <Button class="RefreshButton FreestyleIconButton Blue" onactivate="freestyle.Restart()" onmouseover="UIShowTextTooltip(#invokation_combo_restart)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="FreestyleControlIcon">
        <Button class="FullRefreshIcon FreestyleIconButton Bronze" onactivate="freestyle.Restart(true)" onmouseover="UIShowTextTooltip(#invokation_combo_full_restart)" onmouseout="UIHideTextTooltip()" />
      </Panel>

      <Panel class="FreestyleControlIcon">
        <Button class="CloseButton FreestyleIconButton Red" onactivate="freestyle.Stop()" onmouseover="UIShowTextTooltip(#invokation_combo_stop)" onmouseout="UIHideTextTooltip()" />
      </Panel>
    </Panel>

    <Panel id="FreestyleScore" />
  </Panel>
</root>
