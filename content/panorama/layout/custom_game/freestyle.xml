<root>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/freestyle.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/freestyle.css" />
  </styles>

  <Panel class="FreestyleRoot Hide" hittest="false">
    <Panel class="FreestyleControls TranslucentPanel" hittest="false">
      <Panel class="FreestyleControlIcon">
        <Button
          id="BtnLevelUp"
          class="LevelUpButton FreestyleIconButton Grey"
          onmouseover="UIShowTextTooltip(#invk_controls_level_up)"
          onmouseout="UIHideTextTooltip()"
        />
      </Panel>

      <Panel class="FreestyleControlIcon">
        <Button
          id="BtnLevelMax"
          class="LevelMaxButton FreestyleIconButton Grey"
          onmouseover="UIShowTextTooltip(#invk_controls_level_max)"
          onmouseout="UIHideTextTooltip()"
        />
      </Panel>

      <Panel class="FreestyleControlIcon">
        <Button
          id="BtnRestart"
          class="RefreshButton FreestyleIconButton Blue"
          onmouseover="UIShowTextTooltip(#invk_controls_restart)"
          onmouseout="UIHideTextTooltip()"
        />
      </Panel>

      <Panel class="FreestyleControlIcon">
        <Button
          id="BtnFullRestart"
          class="FullRefreshIcon FreestyleIconButton Bronze"
          onmouseover="UIShowTextTooltip(#invk_controls_full_restart)"
          onmouseout="UIHideTextTooltip()"
        />
      </Panel>

      <Panel class="FreestyleControlIcon">
        <Button
          id="BtnStop"
          class="CloseButton FreestyleIconButton Red"
          onmouseover="UIShowTextTooltip(#invk_controls_stop)"
          onmouseout="UIHideTextTooltip()"
        />
      </Panel>
    </Panel>

    <Panel id="FreestyleScore" />
  </Panel>
</root>
