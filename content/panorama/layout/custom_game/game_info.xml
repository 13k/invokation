<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/game_info.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/game_info.css" />
  </styles>

  <PopupCustomLayout class="Component PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()" onload="SetupPopup()">
    <Button class="CloseButton" onactivate="gameInfo.Close()" />

    <Panel class="Contents">
      <Label class="PopupTitle" text="#invokation_game_info_title" hittest="false" />

      <Panel class="Orbs">
        <DOTAScenePanel class="Orb" map="custom_game/scenes/kid_invoker_orb_quas" camera="camera" particleonly="true" />
        <DOTAScenePanel class="Orb" map="custom_game/scenes/kid_invoker_orb_wex" camera="camera" particleonly="true" />
        <DOTAScenePanel class="Orb" map="custom_game/scenes/kid_invoker_orb_exort" camera="camera" particleonly="true" />
      </Panel>

      <Label class="PopupDescription" text="#invokation_game_info_description" html="true" hittest="false" />

      <Panel class="Separator" />

      <Panel class="PopupButtonRow">
        <Panel class="MetaItem">
          <Label id="VersionLabel" class="MetaText" />
        </Panel>

        <Button class="MetaItem LinkButton" onactivate="gameInfo.OpenURL()">
          <Label class="MetaText LinkText" text="#invokation_game_info_home_page" />
          <Panel class="ArrowIcon" />
        </Button>

        <Button class="MetaItem LinkButton" onactivate="gameInfo.OpenChangelogURL()">
          <Label class="MetaText LinkText" text="#invokation_game_info_changelog" />
          <Panel class="ArrowIcon" />
        </Button>
      </Panel>
    </Panel>
  </PopupCustomLayout>
</root>
