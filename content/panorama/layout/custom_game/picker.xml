<root>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/picker.js" />
  </scripts>

  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss" />

    <include src="file://{resources}/styles/shared/panelstyles.css" />
    <include src="file://{resources}/styles/shared/colors.css" />
    <include src="file://{resources}/styles/custom_game/picker.css" />
  </styles>

  <snippets>
    <snippet name="CombosColumn">
      <Panel class="CombosColumn">
        <Label id="Title" class="PanelTitle" hittest="false" />
        <Panel id="Combos" />
      </Panel>
    </snippet>
  </snippets>

  <Panel class="Root" hittest="false" always-cache-composition-layer="true" require-composition-layer="true">
    <Panel id="CombosSlideout" class="DrawerClosed">
      <Panel id="CombosContents" class="TranslucentPanel">
        <Panel class="PickerTitleContainer PanelTitleContainer">
          <Button class="RefreshButton" onactivate="picker.Reload()" />
          <Label class="PickerTitle PanelTitle" text="#invokation_combos_picker_title" hittest="false" />
        </Panel>
        <Panel id="CombosContainer" />
      </Panel>

      <Button id="CombosThumb" class="PanelSlideThumb" onactivate="picker.Toggle()">
        <Panel class="PanelSlideThumbArrow" />
      </Button>
    </Panel>
  </Panel>
</root>
