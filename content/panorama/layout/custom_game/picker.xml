<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/picker.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/picker.css" />
  </styles>

  <snippets>
    <snippet name="CombosColumn">
      <Panel class="PickerCombosColumn">
        <Label id="PickerCombosColumnTitle" class="PanelTitle" hittest="false" />
        <Panel id="PickerCombosColumnContainer" class="PickerCombosColumnContainer" />
      </Panel>
    </snippet>
  </snippets>

  <Panel class="PickerRoot" hittest="false">
    <Panel id="PickerSlideout" class="DrawerClosed">
      <Panel id="PickerContents" class="TranslucentPanel">
        <Panel class="PickerTitleContainer PanelTitleContainer">
          <Button class="RefreshButton" onactivate="picker.Reload()" />
          <Label class="PickerTitle PanelTitle" text="#invokation_combos_picker_title" hittest="false" />
        </Panel>

        <Button class="PickerFreestyleButton" onactivate="picker.Freestyle()">
          <Label class="PickerFreestyleLabel" text="#invokation_combos_picker_freestyle" hittest="false" />
        </Button>

        <Panel id="PickerCombosContainer" />
      </Panel>

      <Button id="PickerThumb" class="PanelSlideThumb" onactivate="picker.Toggle()">
        <Panel class="PanelSlideThumbArrow" />
      </Button>
    </Panel>
  </Panel>
</root>
