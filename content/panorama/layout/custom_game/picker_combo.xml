<root>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/picker_combo.js" />
  </scripts>

  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss" />

    <include src="file://{resources}/styles/shared/panelstyles.css" />
    <include src="file://{resources}/styles/shared/colors.css" />
    <include src="file://{resources}/styles/custom_game/picker_combo.css" />
  </styles>

  <Panel class="HeroCombo">
    <Label id="Title" class="PanelTitle" hittest="false" />

    <Panel class="InfoContainer">
      <Button class="ComboIcon InfoIcon" onactivate="pickerCombo.ShowDetails()" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_details)" onmouseout="UIHideTextTooltip()" />
      <Button class="ComboIcon SpecialtyIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_specialty)" onmouseout="UIHideTextTooltip()" />
      <Button class="ComboIcon StanceIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_stance)" onmouseout="UIHideTextTooltip()" />
      <Button class="ComboIcon HeroLevelIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_hero_level)" onmouseout="UIHideTextTooltip()">
        <Label id="HeroLevelLabel" class="HeroLevelLabel MonoNumbersFont" hittest="false" />
      </Button>

      <Panel class="RatingsContainer">
        <Panel class="RatingContainer">
          <Button class="AttackDamageIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_damage_rating)" onmouseout="UIHideTextTooltip()" />
          <Panel id="DamageRating" class="ComboRating">
            <Panel class="ComboRatingActive" />
          </Panel>
        </Panel>

        <Panel class="RatingContainer">
          <Button class="DifficultyIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_difficulty_rating)" onmouseout="UIHideTextTooltip()" />
          <Panel id="DifficultyRating" class="ComboRating">
            <Panel class="ComboRatingActive" />
          </Panel>
        </Panel>
      </Panel>
    </Panel>

    <Button class="PlayButton FlatButton" onactivate="pickerCombo.Play()">
      <Label class="PlayLabel" text="#invokation_combo_play" hittest="false" />
    </Button>
  </Panel>
</root>
