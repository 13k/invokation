<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/picker_combo.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/picker_combo.css" />
  </styles>

  <Panel class="PickerComboRoot">
    <Label id="PickerComboTitle" class="PanelTitle" hittest="false" />

    <Panel class="PickerComboInfoContainer">
      <Button class="PickerComboIcon HeroLevelIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_hero_level)" onmouseout="UIHideTextTooltip()">
        <Label id="PickerComboHeroLevelLabel" class="HeroLevelLabel MonoNumbersFont" hittest="false" />
      </Button>

      <Button class="PickerComboIcon InfoIcon" onactivate="pickerCombo.ShowDetails()" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_details)" onmouseout="UIHideTextTooltip()" />
      <Button class="PickerComboIcon SpecialtyIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_specialty)" onmouseout="UIHideTextTooltip()" />
      <Button class="PickerComboIcon StanceIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_stance)" onmouseout="UIHideTextTooltip()" />

      <Panel class="PickerComboRatings">
        <Panel class="LeftRightFlow">
          <Button class="AttackDamageIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_damage_rating)" onmouseout="UIHideTextTooltip()" />
          <Panel id="PickerComboDamageRating" class="Rating">
            <Panel class="RatingActive" />
          </Panel>
        </Panel>

        <Panel class="LeftRightFlow">
          <Button class="DifficultyIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_difficulty_rating)" onmouseout="UIHideTextTooltip()" />
          <Panel id="PickerComboDifficultyRating" class="Rating">
            <Panel class="RatingActive" />
          </Panel>
        </Panel>
      </Panel>
    </Panel>

    <Button class="PlayButton FlatButton" onactivate="pickerCombo.Play()">
      <Label class="PlayLabel" text="#invokation_controls_play" hittest="false" />
    </Button>
  </Panel>
</root>
