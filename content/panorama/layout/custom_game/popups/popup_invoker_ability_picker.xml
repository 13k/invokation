<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/popups/popup_invoker_ability_picker.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/popups/popup_invoker_ability_picker.css" />
  </styles>

  <Popup class="PopupInvokerAbilityPickerRoot" popupbackground="dim" oncancel="popup.Close()" onload="popup.onLoad()">
    <Panel class="PopupInvokerAbilityPickerHeader">
      <Label class="PopupInvokerAbilityPickerSelectionChoice" text="#invokation_ability_picker_choose" />
    </Panel>

    <Panel id="PopupInvokerAbilityPickerAbilityList" />

    <Panel class="PopupButtonRow">
      <Button class="PopupButton" id="PickerButtonOK" onactivate="popup.Submit()">
        <Label text="#DOTA_Ok" />
      </Button>

      <Button class="PopupButton" onactivate="popup.Close()">
        <Label text="#DOTA_Cancel" />
      </Button>
    </Panel>
  </Popup>
</root>
