<root>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/top_bar.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/top_bar.css" />
  </styles>

  <Panel class="TopBarRoot">
    <Panel class="TopBar">
      <Button
        id="BtnShowGameInfo"
        class="TopBarButton InfoIcon"
        onmouseover="UIShowTextTooltip(#DOTA_Custom_Game_Info)"
        onmouseout="UIHideTextTooltip()"
      />

      <Button
        id="BtnQuit"
        class="TopBarButton"
        onmouseover="UIShowTextTooltip(#dota_dashboard_quit)"
        onmouseout="UIHideTextTooltip()"
      />
    </Panel>
  </Panel>
</root>
