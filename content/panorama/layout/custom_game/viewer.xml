<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/viewer.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/viewer.css" />
  </styles>

  <Panel class="Component Hide" hittest="false">
    <Panel id="Container" hittest="false">
      <Button id="CloseButton" class="CloseButton" onactivate="viewer.Close()" />
      <Button id="RefreshButton" class="RefreshButton" onactivate="viewer.Reload()" />

      <Panel id="InformationBackground" hittest="false" />
      <Panel id="InformationBody">
        <Label id="Title" html="true" hittest="false" />

        <Panel id="ScrollPanel" class="TopBottomFlow">
          <Panel id="PropertiesSection" class="Section" hittest="false" />

          <Label id="Description" html="true" hittest="false" />

          <Panel class="Section SequenceSection" hittest="false">
            <Panel class="SectionHeader">
              <Label class="SectionLabel" text="#invokation_viewer_sequence_title" hittest="false" />
            </Panel>

            <Label class="SectionLabel" text="#invokation_viewer_sequence_disclaimer" hittest="false" />

            <Panel id="SequenceContainer" hittest="false" />
          </Panel>
        </Panel>
      </Panel>

      <Panel class="Footer" hittest="false">
        <Panel class="Buttons" hittest="false">
          <Button class="PlayButton" onactivate="viewer.Play()">
            <Label class="PlayLabel" text="#invokation_combo_play" hittest="false" />
          </Button>
        </Panel>
      </Panel>
    </Panel>
  </Panel>
</root>
