<root>
  <scripts>
    <include src="file://{resources}/scripts/lib/component.js" />
    <include src="file://{resources}/scripts/custom_game/viewer_properties.js" />
  </scripts>

  <styles>
    <include src="file://{resources}/styles/custom_game/viewer_properties.css" />
  </styles>

  <Panel class="ViewerPropertiesRoot" hittest="false">
    <Panel class="ViewerPropertiesRow" hittest="false">
      <Button class="ViewerPropertiesIcon HeroLevelIcon" />
      <Label class="ViewerPropertiesLabel" text="#invokation_combo_properties__hero_level" hittest="false" />
      <Button class="ViewerPropertiesValue HeroLevelBadge">
        <Label id="ViewerPropertiesHeroLevelLabel" class="HeroLevelLabel MonoNumbersFont" hittest="false" />
      </Button>
    </Panel>

    <Panel class="ViewerPropertiesRow" hittest="false">
      <Button class="ViewerPropertiesIcon SpecialtyIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_specialty)" onmouseout="UIHideTextTooltip()" />
      <Label class="ViewerPropertiesLabel" text="#invokation_combo_properties__specialty" hittest="false" />
      <Label id="ViewerPropertiesSpecialtyLabel" class="ViewerPropertiesValue ViewerPropertiesLabel" hittest="false" />
    </Panel>

    <Panel class="ViewerPropertiesRow" hittest="false">
      <Button class="ViewerPropertiesIcon StanceIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_stance)" onmouseout="UIHideTextTooltip()" />
      <Label class="ViewerPropertiesLabel" text="#invokation_combo_properties__stance" hittest="false" />
      <Label id="ViewerPropertiesStanceLabel" class="ViewerPropertiesValue ViewerPropertiesLabel" hittest="false" />
    </Panel>

    <Panel class="ViewerPropertiesRow" hittest="false">
      <Button class="ViewerPropertiesIcon AttackDamageIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_damage_rating)" onmouseout="UIHideTextTooltip()" />
      <Label class="ViewerPropertiesLabel" text="#invokation_combo_properties__damage_rating" hittest="false" />
      <Panel id="ViewerPropertiesDamageRating" class="ViewerPropertiesValue Rating">
        <Panel class="RatingActive" />
      </Panel>
    </Panel>

    <Panel class="ViewerPropertiesRow" hittest="false">
      <Button class="ViewerPropertiesIcon DifficultyIcon" onmouseover="UIShowTextTooltip(#invokation_combo_tooltip_difficulty_rating)" onmouseout="UIHideTextTooltip()" />
      <Label class="ViewerPropertiesLabel" text="#invokation_combo_properties__difficulty_rating" hittest="false" />
      <Panel id="ViewerPropertiesDifficultyRating" class="ViewerPropertiesValue Rating">
        <Panel class="RatingActive" />
      </Panel>
    </Panel>
  </Panel>
</root>
