{
  "ts-node": { "files": true },
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  }
}
